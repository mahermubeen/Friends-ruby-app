
<% if user_signed_in? %>
  <h1>Friends List</h1>
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Full name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
      
        <% if friend.user == current_user %>
          <tr>
            <td>
              <%= link_to friend.first_name + " " + friend.last_name, friend %>
            </td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      
        
      <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'New Friend', new_friend_path %>  
<% else %>
  <h1>This is Home</h1>
<% end %>





